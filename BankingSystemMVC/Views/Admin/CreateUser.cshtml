@{
    ViewData["Title"] = "CreateUser";
}


<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Додади корисник</h1>
            </div>
        </div>
    </div>
</section>

<!-- Main content -->
<section class="content">
    <form asp-controller="Admin" asp-action="CreateUser" typeof="submit">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="row">
            <div class="col-12">
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">Податоци</h3>
                        <div class="card-tools">
                            <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                                <i class="fas fa-minus"></i>
                            </button>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="form-group">
                            <label>Email адреса</label>
                            <input name="Email" class="form-control" type="email" required />
                        </div>
                        <div class="form-group">
                            <label>Клиент</label>
                            <select name="CustomerId" class="form-control" asp-items="ViewBag.CustomerId"><option>Избери</option></select>
                        </div>
                        <div class="form-group">
                            <label>Вработен</label>
                            <select name="EmployeeId" class="form-control" asp-items="ViewBag.EmployeeId"><option>Избери</option></select>
                        </div>
                        <div class="form-group">
                            <label>Тел. број</label>
                            <input name="PhoneNumber" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label>Лозинка</label>
                            <input name="Password" class="form-control" type="password" required /> 
                            <section class="text-danger">
                                Лозинката треба да содржи најмалку 8 карактери <br>
                                Лозинката треба да содржи цифра <br>
                                Лозинката треба да содржи голема буква
                            </section>
                        </div>
                    </div>
                </div>
                <!-- /.card -->
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <a asp-action="Index" class="btn btn-secondary">Назад кон корисници</a>
                <input type="submit" value="CreateUser" class="btn btn-success float-right">
            </div>
        </div>
    </form>
</section>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}



