@model AppUser
@{
    ViewData["Title"] = "Кориснички профил на клиент";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h2>@(Model != null && Model.CustomerId != null ? "Промени" : "Нов") кориснички профил</h2>
                <h4>Клиент: @ViewData["FullNameId"]</h4>
            </div>
        </div>
    </div>
</section>



<!-- Main content -->
<section class="content">
    <form asp-action="CustomerProfile" method="post">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="row">
            <div class="col-12">
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">Податоци</h3>
                        <div class="card-tools">
                            <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                                <i class="fas fa-minus"></i>
                            </button>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="form-group" hidden>
                            <input name="CustomerId" class="form-control" value="@(Model != null ? Model.CustomerId : @ViewData["CustomerId"])" hidden />
                        </div>
                        <div class="form-group">
                            <label for="Id">ID на корисник</label>
                            <input asp-for="Id" class="form-control" readonly />
                        </div>
                        <div class="form-group">
                            <label for="PasswordHash">Хеширана лозинка</label>
                            <input asp-for="PasswordHash" class="form-control" readonly />
                        </div>
                        <div class="form-group">
                            <label for="PhoneNumber">Тел. број</label>
                            <input asp-for="PhoneNumber" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label for="Email">Email адреса</label>
                            <input asp-for="Email" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label for="Password">Нова лозинка</label>
                            <input name="Password" class="form-control" />
                        </div>
                        <hr />
                        <div class="form-group">
                            <input type="submit" value="@(Model != null && Model.CustomerId != null ? "Зачувај" : "Внеси нов")" class="btn btn-default" />
                        </div>
                    </div>
                </div>
                <!-- /.card -->
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <a asp-action="Index" class="btn btn-secondary">Назад кон корисници</a>
            </div>
        </div>
    </form>
</section>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
