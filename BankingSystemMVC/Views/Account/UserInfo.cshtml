@model BankingSystemMVC.ViewModels.UserInfoViewModel
@{
    ViewData["Title"] = "Кориснички профил";
}



<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Мој кориснички профил</h1>
            </div>
        </div>
    </div>
</section>

<section class="content">
    <div class="row ">
        <div class="col-12">
            <div class="card card-primary">
                <div class="card-header">
                    <h3 class="card-title">Податоци</h3>
                    <div class="card-tools">
                        <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                            <i class="fas fa-minus"></i>
                        </button>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-12">
                            <form asp-action="UserInfo" method="post">
                                <div asp-validation-summary="All" class="text-danger"></div>
                                <div class="form-group">
                                    <label asp-for="UserDetails"></label>
                                    <input asp-for="UserDetails" class="form-control" readonly />
                                </div>
                                <div class="form-group">
                                    <label asp-for="Role"></label>
                                    <input asp-for="Role" class="form-control" readonly />
                                </div>
                                <div class="form-group">
                                    <label asp-for="Id"></label>
                                    <input asp-for="Id" class="form-control" readonly />
                                </div>
                                <div class="form-group">
                                    <label asp-for="PasswordHash"></label>
                                    <input asp-for="PasswordHash" class="form-control" readonly />
                                </div>
                                <div class="form-group">
                                    <label asp-for="PhoneNumber"></label>
                                    <input asp-for="PhoneNumber" class="form-control"/>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Email"></label>
                                    <input asp-for="Email" class="form-control" readonly />
                                </div>
                                <div class="form-group">
                                    <label asp-for="NewPassword"></label>
                                    <input asp-for="NewPassword" class="form-control" />
                                </div>
                                <div class="form-group">
                                    <label asp-for="ConfirmPassword"></label>
                                    <input asp-for="ConfirmPassword" class="form-control" />
                                </div>
                                <hr />
                                <div class="form-group">
                                    <input type="submit" value="Зачувај" class="btn btn-default" />
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</section>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
